generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id       String @id @default(uuid())
    userId   String @unique
    email    String @unique
    fullName String
    repos    Repo[]
}

model Repo {
    id                String        @id @default(uuid())
    name              String
    userId            String
    user              User          @relation(fields: [userId], references: [userId])
    githubUrl         String
    githubToken       String?
    repoName          String
    repoImage         String
    stars             Int
    forkCount         Int
    description       String
    totalPrs          Int
    totalMergedPrs    Int
    totalCommits      Int
    totalContributors Int
    commits           Commit[]
    languages         Language[]
    contributors      Contributor[]
    dependencies      Dependency[]
}

model Commit {
    id           String   @id @default(uuid())
    repoId       String
    repo         Repo     @relation(fields: [repoId], references: [id])
    message      String
    commiter     String
    commitedDate DateTime
    summary      String
    avatarUrl    String
    commitSha    String
}

model Language {
    id            String @id @default(uuid())
    repoId        String
    repo          Repo   @relation(fields: [repoId], references: [id])
    name          String
    color         String
    numberOfLines Int
}

model Contributor {
    id            String @id @default(uuid())
    name          String
    avatarUrl     String
    contributions Int
    repoId        String
    repo          Repo   @relation(fields: [repoId], references: [id])
}

model Dependency {
    id  String  @id @default(uuid())
    name    String
    version String
    repoId  String
    repo    Repo    @relation(fields: [repoId], references: [id])
}